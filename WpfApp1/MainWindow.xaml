        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="22" VerticalAlignment="Top">
            <MenuItem Height="22" Header="File">
                <MenuItem Height="22" Header="Open" Click="MenuItem_Click_1">
                    <MenuItem Height="22" Header="File_1"></MenuItem>
                </MenuItem>
                <MenuItem Height="22" Header="Save"></MenuItem>
                <Separator/>
