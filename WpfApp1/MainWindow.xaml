            </MenuItem>
            <MenuItem Height="22" Header="View"></MenuItem>
            <MenuItem Height="22" Header="Image" Click="MenuItem_Click_2"></MenuItem>
        </Menu>
        <Image Name="DisplayImage" Margin="87,160,605,163"/>
